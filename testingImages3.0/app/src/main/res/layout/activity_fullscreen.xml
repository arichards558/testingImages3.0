<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.example.brosiusj.testingimages30.FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/westBuilding"
        android:clickable="true"
        android:foregroundTintMode="src_over"
        android:foregroundTint="#006a6a6a">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>

        <Button
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:id="@+id/westSports"
            android:layout_gravity="left|top"
            android:background="@drawable/westLogo1" />

        <Button
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:id="@+id/calendar"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/calendar" />

        <Button
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:id="@+id/infiniteCampus"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/InfiniteCampus" />

        <Button
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:id="@+id/davenportWestHome"
            android:layout_gravity="right|top"
            android:background="@drawable/westLogo" />
    </FrameLayout>

</FrameLayout>
